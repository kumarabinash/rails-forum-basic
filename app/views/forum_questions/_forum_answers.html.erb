<ul>
		<% @forum_question.forum_answers.each do |answer| %>
			<% @forum_answer_comment.id = answer.id %>
			<li>
			<div class="row">
				<div class="col-1">
					Hi!
				</div>
				<div class="col-11">
					<div class="answer-meta">
						
						<p>
							<span class="forum-user"><%= link_to answer.user.first_name %></span>
							<span class="time"><%= distance_of_time_in_words(answer.created_at, Time.now) %> ago</span>
						</p>

						<p>
							<%= answer.body %>
						</p>

						<div class="forum-question-commenting">
							<div class="forum_question_comments">
								<ul>
									<% answer.forum_answer_comments.each do |comment| %>

									<li>
										<p>
											<%= comment.body %>
										</p>

										<p class="user_time">
											<span class="forum-user"><%= link_to comment.user.first_name %></span>
											<span class="time"><%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</span>
										</p>
										
									</li>
									<% end %>
								</ul>
							</div>

							<div class="forum-question-comment-form">
								<%= form_for [@forum_answer_comment] do |f| %>
								<div>
									<a href="" class="add_comment_link">add a comment</a>
									<div class="comment">
										<%= f.number_field :user_id , placeholder: "user_id" %>

										<%= f.hidden_field :forum_answer_id, value: @forum_answer_comment.id %>

										<%= f.text_area :body, placeholder: "Write a comment!" %>
										
										<%= f.submit %>
									</div>
								</div>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
			</li>
		<% end %>
	</div>
</ul>