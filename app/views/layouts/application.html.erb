<!DOCTYPE html>
<html>
<head>
  <title>Forum</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="nav">
<% if user_session %>
  <%= current_user.email %>
  <%= link_to "Sign Out", destroy_user_session_path(current_user), :method => 'delete' %>
<% else %>
  <%= link_to "Sign Up", new_user_session_path %>
<% end %>
</div>
<section class="row">
  <main class="col-9">
    <%= yield %>
  </main>
  <aside class="col-2">
  <h3>Topics</h3>
  </aside>
</section>




<script type="text/javascript">
<% if !(notice == nil) %>
  k$.growl({
    text: '<%= notice %>', // Optional
    delay: 2000, // Optional, 0 = forever
    type: 'alert-warn', // Optional
    // id: 'token' // Optional
  });
</script>
<% end %>
</body>
</html>
